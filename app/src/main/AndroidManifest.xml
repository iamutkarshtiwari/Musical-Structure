<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iamutkarshtiwari.pandora">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LibraryActivity"
            android:label="@string/library"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NowPlayingActivity"
            android:label="@string/now_playing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ArtistActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AlbumActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SongListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AlbumListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.PaymentActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>